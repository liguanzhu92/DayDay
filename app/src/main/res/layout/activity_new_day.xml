<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_new_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.guanzhuli.dayday.NewDayActivity">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:paddingTop="@dimen/general_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="2.5"
                        android:text="Title:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:textSize="16sp"
                        android:id="@+id/new_day_title"
                        android:layout_weight="8"
                        android:hint="title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="2.5"
                        android:text="Category:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/new_day_category"
                        android:layout_weight="7"
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:clickable="true"
                        android:id="@+id/new_day_edit_category"
                        android:layout_weight="1"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/divider"
                        android:layout_width="0dp" android:layout_height="wrap_content"/>
            </LinearLayout>
            <RadioGroup
                    android:id="@+id/new_day_category_select"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">
                <View
                        android:layout_marginRight="@dimen/general_padding"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/darker_gray"/>
            </LinearLayout>
            <LinearLayout
                    android:paddingTop="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="2.5"
                        android:text="Event Date:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/new_day_event_date"
                        android:layout_weight="7"
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:clickable="true"
                        android:id="@+id/new_day_edit_date"
                        android:layout_weight="1"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/divider"
                        android:layout_width="0dp" android:layout_height="wrap_content"/>
            </LinearLayout>
            <CalendarView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/new_day_calendar"/>
            <Switch
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Set as Cover:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/new_day_cover_switch"/>
            <Switch
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Notification:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/new_day_notification_switch"/>
            <LinearLayout
                    android:paddingTop="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="2.5"
                        android:text="Repeat:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/new_day_repeat"
                        android:layout_weight="7"
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:clickable="true"
                        android:id="@+id/new_day_edit_repeat"
                        android:layout_weight="1"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/divider"
                        android:layout_width="0dp" android:layout_height="wrap_content"/>
            </LinearLayout>
            <RadioGroup
                    android:id="@+id/new_day_repeat_select"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">
                <View
                        android:layout_marginRight="@dimen/general_padding"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/darker_gray"/>
            </LinearLayout>
            <FrameLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/general_padding"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/new_day_bg"
                        android:src="@mipmap/anniversary_3"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent" android:layout_height="100dp"/>
                <LinearLayout
                        android:paddingTop="@dimen/general_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView
                            android:layout_weight="9.5"
                            android:text="Customize Background :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:clickable="true"
                            android:id="@+id/new_day_edit_bg"
                            android:layout_weight="1"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/divider"
                            android:layout_width="0dp" android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
